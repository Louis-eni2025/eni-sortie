{% extends 'base.html.twig' %}
{% block title %}
    Créer une sortie
{% endblock %}
{% block body %}
    <h1 class="mb-4 h1Page">Création d'une sortie</h1>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.nom) }}
            {{ form_row(form.dateHeureDebut) }}
            {{ form_row(form.dateLimiteInscription) }}
            {{ form_row(form.nbInscriptionsMax) }}
            {{ form_row(form.duree) }}
            {{ form_row(form.infosSortie) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.campus) }}
            <div class="d-flex align-items-center gap-2">
                {{ form_row(form.lieu) }}
                <a href="{{ path('app_lieu_creer',{'from':fromParameter,'id':sortie.id}) }}" class="btn mt-4">
                    <i class="fa-2x fa-regular fa-square-plus"></i>
                </a>
            </div>
            {{ form_row(form.ville) }}
            {{ form_row(form.rue) }}
            {{ form_row(form.code_postal) }}
            {{ form_row(form.latitude) }}
            {{ form_row(form.longitude) }}
        </div>
    </div>
    <div class="mx-auto col-sm-4 d-flex justify-content-between mt-4">
        <button type="submit" name="action" value="enregistrer" class="btn btn-primary">Enregistrer</button>
        <button type="submit" name="action" value="publier" class="btn btn-primary">Publier</button>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block extraJs %}
    <script src="{{ asset('scripts/creerFormulaireSortie.js') }}"></script>
{% endblock %}

